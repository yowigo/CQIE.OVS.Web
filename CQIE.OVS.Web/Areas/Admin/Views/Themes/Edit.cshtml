@model CQIE.OVS.Models.Theme
@inject CQIE.OVS.Services.IService.ISingerService _singerService

@{
    ViewData["Title"] = "主题信息";
    Layout = "_AdminLayout";

    var singers = await _singerService.GetListAsync();
    foreach (var item in singers)
    {
        ViewBag.Singer = item.Name;
    }
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2>填写主题信息   <small>填写详细的主题信息，方便开展投票活动</small></h2>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <form method="post" asp-area="Admin" asp-controller="Themes" asp-action="Edit">
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label">名称</label>
                        <div class="col-sm-10">
                            <input asp-for="Name" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group  row">
                        <label asp-for="Categroy" class="col-sm-2 col-form-label">类别</label>
                        <div class="col-sm-10">
                            <input asp-for="Categroy" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group  row">
                        <label asp-for="StartTime" class="col-sm-2 col-form-label">开始时间</label>
                        <div class="col-sm-10">
                            <input asp-for="StartTime" type="datetime-local" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group  row">
                        <label asp-for="EndTime" class="col-sm-2 col-form-label">结束时间</label>
                        <div class="col-sm-10">
                            <input asp-for="EndTime" type="datetime-local" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group  row">
                        <label asp-for="Description" class="col-sm-2 col-form-label">活动详情</label>
                        <div class="col-sm-10">
                            <input asp-for="Description" type="text" height="150" width="1080" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">歌手1</label>
                        <div class="col-sm-10">
                             <select asp-items="@ViewBag.singer1" class="form-control m-b">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">歌手2</label>
                        <div class="col-sm-10">
                             <select asp-items="@ViewBag.singer2" class="form-control m-b">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <input type="submit" value="保存" class="btn btn-primary btn-sm">
                            <a asp-area="Admin" asp-controller="Themes" asp-action="Index" 
                                class="btn btn-white btn-sm">返回</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

