@using CQIE.OVS.Web.Areas.Admin.Models
@model ThemeSingerViewModel

@{
    ViewData["Title"] = "主题信息";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2>填写主题信息   <small>填写详细的主题信息，方便开展投票活动</small></h2>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <form method="post" asp-area="Admin" asp-controller="Themes" asp-action="Create">
                    <div class="form-group row">
                        <label asp-for="Theme.Name" class="col-sm-2 col-form-label">名称</label>
                        <div class="col-sm-10">
                            <input asp-for="Theme.Name" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Theme.Categroy" class="col-sm-2 col-form-label">类别</label>
                        <div class="col-sm-10">
                            <input asp-for="Theme.Categroy" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Theme.StartTime" class="col-sm-2 col-form-label">开始时间</label>
                        <div class="col-sm-10">
                            <input asp-for="Theme.StartTime" type="datetime-local" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Theme.EndTime" class="col-sm-2 col-form-label">结束时间</label>
                        <div class="col-sm-10">
                            <input asp-for="Theme.EndTime" type="datetime-local" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Theme.Description" class="col-sm-2 col-form-label">活动详情</label>
                        <div class="col-sm-10">
                            <input asp-for="Theme.Description" type="text" height="150" width="1080" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">歌手1</label>
                        <div class="col-sm-10">
                             <select asp-items="Model.SingerListItems" name="Singer1Id" class="form-control m-b">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">歌手2</label>
                        <div class="col-sm-10">
                             <select asp-items="Model.SingerListItems" name="Singer2Id" class="form-control m-b">
                                <option value=""></option>
                            </select>
                            <a asp-route-id=""></a>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <input type="submit" value="保存" class="btn btn-primary btn-sm">
                            <a asp-area="Admin" asp-controller="Themes" asp-action="Index" 
                                class="btn btn-white btn-sm">返回</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}