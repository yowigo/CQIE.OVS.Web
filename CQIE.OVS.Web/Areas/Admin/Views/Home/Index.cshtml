@model IEnumerable<CQIE.OVS.Models.Theme>
@{
    Layout = "_AdminLayout";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-5">
            <div class="widget style1">
                <div class="row">
                    <div class="col-lg-16 text-center">
                        <i class="fa fa-trophy fa-5x"></i>
                    </div>
                    <div class="col-lg-8 text-right">
                        <h2 class="font-bold">网上投票系统</h2>
                        <span> 投票设计包括以下功能:增加主题、删除主题、查看主题、修改主题... </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-lg-8">
                        <i class="fa fa-cloud fa-5x"></i>
                    </div>
                    <div class="col-6 text-right">
                        <h2> 主题活动数量： </h2>
                        <h1 class="font-bold"> @ViewBag.themeCount </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
